<%- include('../../layouts/front/header') %>

<main id="main">
    <div class="my-3 text-center">
        <%  if(error.length) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>OMG! </strong> <%= error %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
        <% } if(success.length) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Congratz! </strong> <%= success %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% } %>
        </div>
    <section id="contact" class="contact mb-5">
        <div class="container" data-aos="fade-up">
            <div class="row">
                <div class="col-lg-12 text-center mb-5">
                <h1 class="page-title">Post your Blog</h1>
                </div>
            </div>

            <div class="form mt-5">
                <form method="post" action="/postInsert" role="form" enctype="mutipart/form-data">
                <div class="form-group">
                    <label>Post Category</label>
                    <select class="form-control" name="category_id" id="category_id">
                        <% catDetails.map( Catdata => { %>
                        <option value="<%= Catdata._id %>"><%= Catdata.name %></option>
                        <% }) %>
                    </select>
                </div><br>
                <div class="form-group">
                    <label>Post Heading</label>
                    <input type="text" class="form-control" name="heading" id="heading" placeholder="Enter Heading Here..." required>
                </div><br>
                <div class="form-group">
                    <label>Post Blog</label>
                    <textarea class="form-control ckeditor" name="post" id="post" rows="6" placeholder="Enter blog here..." required></textarea>
                </div><br>
                <div class="form-group">
                    <label>Post Blog Image</label>
                    <input type="file" class="form-control" name="image" id="image"  >
                </div><br>
                
                    <input type="hidden" name="user_register_id" id="user_register_id" value="<%= loginUser._id %>">

               
                    
               
                <div class="text-center"><button type="submit" class="btn btn-dark btn-lg">Post Save</button></div>
                </form>
            </div><!-- End Contact Form -->
    
        </div>
    </section>
  
</main><!-- End #main -->

<%- include('../../layouts/front/footer') %>