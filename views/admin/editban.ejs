<%- include('../../layouts/admin/dashboardheader') %>
   
<div class="container-fluid"> 
    <h1 class="h3 mb-4 text-gray-800">Edit Banner</h1>
    <% if(error.length) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>OMG! </strong> <%= error %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
    <% } %>        
    <form method='post' action="/admin/banner/banupdate" enctype="multipart/form-data">
        <div class="form-group">
            <label>Banner Heading</label>
            <input type="text" class="form-control" value="<%= banDetails.heading %>" id="heading" name="heading" required>                
            <input type="hidden" value="<%= banDetails._id %>" id="id" name="id">
        </div>

        <div class="form-group">
            <label>Banner Image</label>
            <input type="file" class="form-control" id="image" name="image"><br>
            <img src="/admin/banner-img/<%= banDetails.image %>" style="width:100px;height:100px;border-radius: 10px;">
        </div>

        <div class="form-group text-gray-800">
            <textarea name="description" id="description" cols="110" rows="5"
                class="form-control"
                placeholder="Enter Desription"><%= banDetails.description%></textarea>

        </div>

        <a href="/admin/banner" class="btn btn-danger">Cancel</a>
        <button type="submit" class="btn btn-primary">Update</button>            
    </form> 
</div>

<%- include('../../layouts/admin/dashboardfooter') %>