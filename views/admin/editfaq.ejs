<%- include('../../layouts/admin/dashboardheader') %>
   
    <div class="container-fluid"> 
        <h1 class="h3 mb-4 text-gray-800">Edit FAQ</h1>
        <% if(error.length) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>OMG! </strong> <%= error %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
        <% } %>        
        <form method='post' action="/admin/faq/faqupdate">
            <div class="form-group">
                <label>Question(?)</label>
                <input type="text" class="form-control" value="<%= faqDetails.question %>" id="question" name="question" > 
                <input type="hidden" value="<%= faqDetails._id %>" id="id" name="id">               
            </div>
    
            <div class="form-group">
                <label>Answer</label>
                <textarea class="form-control ckeditor" rows="5" id="answer" name="answer"><%= faqDetails.answer %></textarea>
            </div>  
            
            <a href="/admin/faq" class="btn btn-danger">Cancel</a>
            <button type="submit" class="btn btn-primary">Update</button>            
        </form> 
    </div>

<%- include('../../layouts/admin/dashboardfooter') %>